{
  "name": "sitegate-user",
  "version": "0.3.0",
  "description": "User microservice for SiteGate",
  "scripts": {
    "start": "node app",
    "test": "zx test",
    "coverage": "zx coverage",
    "coveralls": "zx coveralls"
  },
  "zx": {
    "test": {
      "env": {
        "NODE_ENV": "test"
      },
      "cmd": "mocha test/{**/,/}*.js --colors"
    },
    "coverage": {
      "env": {
        "NODE_ENV": "test"
      },
      "cmd": "istanbul cover _mocha test/{**/,/}*.js -- -R spec"
    },
    "coveralls": {
      "env": {
        "NODE_ENV": "test"
      },
      "cmd": [
        "istanbul cover _mocha test/{**/,/}*.js --report lcovonly -- -R spec",
        "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "rm -rf ./coverage"
      ]
    }
  },
  "author": {
    "name": "Zoltan Kochan",
    "email": "zoltan.kochan@gmail.com",
    "url": "http://kochan.io"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sitegate/user.git"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "dependencies": {
    "convict": "^1.0.2",
    "crypto": "0.0.3",
    "debug": "^2.2.0",
    "jimbo": "0.0.8",
    "jimbo-client": "0.0.0",
    "joi": "^7.1.0",
    "mongoose": "^4.1.6",
    "plugiator": "^0.1.0",
    "thenify": "^3.1.1",
    "yaml-or-json": "^0.1.0",
    "zx": "^0.2.1"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-as-promised": "^5.2.0",
    "coveralls": "^2.11.6",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "ramda": "^0.19.1",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0"
  }
}
